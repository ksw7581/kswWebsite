{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es6",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*" : ["api/*"],
      "@fonts/*" : ["fonts/*"],
      "@styles/*" : ["styles/*"],
      "@utils/*" : ["utils/*"]
    }
  }
}
